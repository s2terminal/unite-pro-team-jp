{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/roster.schema.json",
  "title": "Rosters",
  "type": "object",
  "propertyNames": { "pattern": "^[a-z0-9][a-z0-9_-]*$" },
  "additionalProperties": {
    "type": "array",
    "minItems": 1,
    "items": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "member": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "in": {
              "type": "array",
              "items": { "type": "string", "minLength": 1 },
              "uniqueItems": true
            },
            "out": {
              "type": "array",
              "items": { "type": "string", "minLength": 1 },
              "uniqueItems": true
            }
          },
          "anyOf": [{ "required": ["in"] }, { "required": ["out"] }]
        },
        "reference": {
          "type": "array",
          "items": { "type": "string", "format": "uri" },
          "minItems": 1
        },
        "date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "memo": { "type": "string" }
      },
      "required": ["member", "date"]
    }
  }
}
