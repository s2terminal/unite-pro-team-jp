---
import Header from '../components/layout/Header';
import Footer from '../components/layout/Footer';
import href from '../lib/url';
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={href('favicon.svg', { trailingSlash: false })} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#673ab7" />
    <title>Unite Pro Team JP</title>
  </head>
  <body>
    <Header client:load />
    <div class="content-container">
      <main class="main">
        <slot />
      </main>
    </div>
    <Footer client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  /* メインコンテンツが短いページでもフッターが下に来るように最小高さを確保 */
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    /* 背景色はテーマのデフォルトに近い色味 */
    background-color: #f7f7f9;
  }

  .content-container {
    flex: 1 0 auto;
    background-color: #ffffff;
  }

  .main {
    max-width: 1100px;
    margin: 0 auto;
    padding: 24px;
  }
</style>
