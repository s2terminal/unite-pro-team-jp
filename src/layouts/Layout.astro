---
import CssBaseline from '@mui/material/CssBaseline';
import Header from '../components/Header';
import Footer from '../components/Footer';
import href from '../lib/url';
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href={href('favicon.svg', { trailingSlash: false })} />
    <meta name="generator" content={Astro.generator} />
    <title>Unite Pro Team JP</title>
  </head>
  <body>
    <CssBaseline />
    <Header client:load />
    <div class="content-container">
      <slot />
    </div>
    <Footer client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  /* メインコンテンツが短いページでもフッターが下に来るように最小高さを確保 */
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    /* フッターと同じ色 */
    background-color: #f5f5f5;
  }

  .content-container {
    flex: 1 0 auto;
    background-color: #ffffff;
  }
</style>
