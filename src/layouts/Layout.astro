---
import href from '../lib/url';
import SiteHeader from '../components/layout/Header';
import NavigationTabs from '../components/layout/NavigationTabs';
import SiteFooter from '../components/layout/Footer';

const currentPath = Astro.url.pathname;
---

<style>
  :root {
    --maxw: 1100px;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background: #f7f7f9;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  header,
  footer {
    background: #fff;
    border-bottom: 1px solid #e0e0e0;
  }

  footer {
    border-top: 1px solid #e0e0e0;
    border-bottom: none;
  }

  .container {
    max-width: var(--maxw);
    margin: 0 auto;
    padding: 12px 16px;
  }

  main {
    flex: 1 0 auto;
    max-width: var(--maxw);
    margin: 0 auto;
    padding: 24px 16px 32px;
    width: 100%;
  }
</style>

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={href('favicon.svg', { trailingSlash: false })} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#673ab7" />
    <slot name="head" />
  </head>
  <body>
    <header>
      <SiteHeader client:load />
    </header>
    <NavigationTabs currentPath={currentPath} client:load />
    <main>
      <slot />
    </main>
    <SiteFooter client:load />
  </body>
</html>
